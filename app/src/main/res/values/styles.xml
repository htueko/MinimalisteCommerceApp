<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!--custom style for spinner-->
    <style name="SpinnerStyle" parent="">
        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="android:textSize">18sp</item>
    </style>

    <!--custom style for buy now button-->
    <style name="BuyNowButtonStyle" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <!--custom style for price text-->
    <style name="PriceTagStyle">
        <item name="android:textColor">@color/accentTextColor</item>
        <item name="android:textSize">20sp</item>
    </style>

    <!--custom style for title-->
    <style name="TitleTextStyle">
        <item name="android:textColor">@color/secondaryTextColor</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <!--custom style for bottom nav view-->
    <style name="BottomNavStyle">
        <item name="android:itemBackground">@drawable/bottom_nav_color</item>
        <!--<item name="itemTextColor">@color/navigation_bar_txt_color</item>-->
        <!--<item name="itemIconTint">@color/navigation_bar_txt_color</item>-->
    </style>

    <!--custom style for title in detail activity-->
    <style name="DetailTitleTextStyle">
        <item name="android:paddingStart">16dp</item>
        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <!--custom style for price in detail activity-->
    <style name="DetailPriceTagStyle">
        <item name="android:paddingStart">16dp</item>
        <item name="android:textColor">@color/accentTextColor</item>
        <item name="android:textSize">24sp</item>
    </style>

    <!--custom style for description in detail activity-->
    <style name="DetailDescriptionTextStyle">
        <item name="android:paddingStart">16dp</item>
        <item name="android:textColor">@color/secondaryTextColor</item>
        <item name="android:textSize">20sp</item>
    </style>

    <!--custom style for button at detail activity-->
    <style name="BuyNowButtonDetailStyle">
        <item name="android:background">@color/buttonBackground</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/primaryTextColor</item>
    </style>

</resources>
